{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "incremental": true,
        "types": [
            "node", "cypress", "@testing-library/cypress"
        ],
        "typeRoots": [
            "../types",
            "../node_modules/@types"
        ]
    },
    "include": [
        "./index.ts",
        "e2e/**/*",
        "plugins/**/*",
        "support/**/*",
        "../node_modules/cypress",
        "../node_modules/@testing-library/cypress"
    ],
    "exclude": [
        "../node_modules/@types/jest",
        "../node_modules/@testing-library/jest-dom"
    ]
}
